 <!-- show any messages that come back with saving a game -->
    {{#if message}}
    <div class="row">
    
            <div class="alert alert-danger text-center">{{{message}}}</div>
    </div>
    {{/if}}
<div class="row">

    <div class="col-md-7 pull-left">
        {{#if games}}
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Creator</th>
                <th>Started</th>
                <th>Created On</th>
                <th>Challenger</th>
            </tr>
            {{#each games}}
            <tr>
                <td>{{Name}}</td>
                {{#if _creator.local.email}}
                <td>{{_creator.local.email}}</td>
                {{else if _creator.google.email}}
                <td>{{_creator.google.email}}</td>
                {{else}}
                <td>{{_creator.facebook.email}}</td>
                {{/if}}
                <td>{{HasStarted}}</td>
                <td>{{Created}}</td>
                {{#if _challenger.local.email}}
                <td>{{_challenger.local.email}}</td>
                {{else if _challenger.google.email}}
                <td>{{_challenger.google.email}}</td>
                {{else if _challenger.facebook.email}}
                <td>{{_challenger.facebook.email}}</td>
                {{else}}
                <td>
                    <form action="/game/" method="put">
                        <button type="submit" class="btn btn-danger">Join</buton>
                    </form>
                </td>
                {{/if}}
            </tr>
            {{/each}}
        {{/if}}
            



        </table>
    </div>

    <div class="col-md-3 col-md-offset-8 creategame">
        <div class="row">
            <h3>Create Game:</h3>
        </div>
        <div class="row">
            <form action="/game/" method="post">
            <div class="form-group">
                <label>Game Name</label>
                <input type="text" placeholder="Game name here.." class="form-control" name="name" required="required">
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Create!</button>
        </form>
        </div>

    </div>
</div>